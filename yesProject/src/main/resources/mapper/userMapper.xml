<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="userInfo">
  
	  <select id="insertOne" parameterType="com.bit.yes.model.entity.UserVo">
	  insert into userInfo
	  	<choose>
		  <when test="password != null">
	  		(id,password,name,nickname,email,phoneNum,pwQuestion,birthDate,registNum) values(#{id},#{password},#{name},#{nickName},#{email},
	  	#{phoneNum},#{pwQuestion},#{birthDate},#{registNum})
		  </when>
		  <otherwise>
		   	(id,name,registNum) values(#{id},#{name},#{registNum})
		  </otherwise>
	  	</choose>
	 
	  </select>
	  <select id="selectUserInfo" resultType="com.bit.yes.model.entity.UserVo">
	  	select * from userInfo where id=#{id} 
	  	<if test="password > 0">
	  		and password=#{password}
	  	</if>
	  </select>
	  
  	  <select id="selectID" parameterType="String" resultType="String">
	  	select id  from userInfo where id=#{param}
	  </select>	
	  
	  <select id="selectEmail" parameterType="String" resultType="String">
	  	select email from userInfo where email=#{param}
	  </select>
  
  	  <select id="findID" parameterType="map" resultType="String">
  	  	select id from userInfo where name="${name}" and email="${email}" and birthDate="${birthDate}"
  	  </select>

  	  <select id="selectPassword" parameterType="String" resultType="String">
  	  	select password from userInfo where id="${id}" and name="${name}" and birthDate="${birth}" and email="${email}" and pwQuestion="${answer}"
  	  </select>

  	  
  	  <update id="updatePW"  parameterType="hashmap" >
  	  	update userInfo set password="${password}" where id="${id}"
  	  </update>
  	  
  	   <update id="updateInfo" parameterType="com.bit.yes.model.entity.UserVo" >
  	  	update userInfo set password=#{password},nickname=#{nickName},email=#{email},phoneNum=#{phoneNum},registNum=#{registNum} where id=#{id}
  	  </update>
  	  
  	  <delete id="deleteOne" parameterType="string">
  	  	delete from userInfo where id=#{param1}
  	  </delete>

</mapper>
