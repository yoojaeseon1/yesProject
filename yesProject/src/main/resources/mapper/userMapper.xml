<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="userInfo">
  
	  <select id="insertOne" parameterType="com.bit.yes.model.entity.UserVo">
	  insert into
	  <if test="password !=null">
	 	 userInfo(id,password,name,nickname,email,phoneNum,pwQuestion,birthDate,registNum) values(#{id},#{password},#{name},#{nickName},#{email},
	  	#{phoneNum},#{pwQuestion},#{birthDate},#{registNum})
	  </if>
	  <if test="password ==null and email!=null">
	  	 userInfo(id,name,email,birthDate,registNum) values (#{id},#{name},#{email},#{birthDate},#{registNum})
	  </if>
	  <if test="password == null and email==null">
	  	 userInfo(id,name,registNum) values(#{id},#{name},#{registNum})
	  </if>
	 
	  </select>
	  
	  
	  <select id="loginCheck" parameterType="hashmap" resultType="com.bit.yes.model.entity.UserVo">
	  	select a.id, a.password, a.name, a.nickname, a.email, a.phoneNum, a.pwQuestion, a.birthDate, a.registNum, b.acceptState from userInfo a left join branchInfo b on a.id = b.id where a.id="${id}" and a.password=${password}
	  </select>
	  
  	  <select id="checkIDDup" parameterType="String" resultType="com.bit.yes.model.entity.UserVo">
	  	select *  from userInfo where id=#{param1}
	  </select>	
  
  	  <select id="findID" parameterType="map" resultType="String">
  	  	select id from userInfo where name="${name}" and email="${email}" and birthDate="${birthDate}"
  	  </select>

  	  <select id="findPw" parameterType="String" resultType="String">
  	  	select password from userInfo where id="${id}" and name="${name}" and birthDate="${birth}" and email="${email}" and pwQuestion="${answer}"
  	  </select>
<!--   	  <select id="findPw" parameterType="String" resultType="String">
  	  	select password from userInfo where id=#{param1} and name=#{param2} and birthDate=#{param3} and email=#{param4} and pwQuestion=#{param5}
  	  </select> -->
  	  
  	  <update id="updatePW"  parameterType="hashmap" >
  	  	update userInfo set password="${password}" where id="${id}"
  	  </update>
  	  
  	   <update id="updateInfo" parameterType="com.bit.yes.model.entity.UserVo" >
  	  	update userInfo set password=#{password},nickname=#{nickName},email=#{email},phoneNum=#{phoneNum},registNum=#{registNum} where id=#{id}
  	  </update>
  	  
  	  <delete id="deleteOne" parameterType="string">
  	  	delete from userInfo where id=#{param1}
  	  </delete>

</mapper>
